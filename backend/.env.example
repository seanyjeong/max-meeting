RATE_LIMIT_REFRESH=10/minute
RATE_LIMIT_UPLOAD=10/hour
RATE_LIMIT_LLM=30/hour
RATE_LIMIT_DEFAULT=200/minute

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
